# MPD
# ---
ncmpcpp_directory = "~/.ncmpcpp"
lyrics_directory = "~/.lyrics"

mpd_host = "localhost"
mpd_port = "6600"
# mpd_music_dir =  "~/Music"
mpd_connection_timeout = "5"
mpd_crossfade_time = "5"


# VISUALIZER
# ---
visualizer_data_source = "/tmp/mpd.fifo"
visualizer_output_name = "Visualizer"
visualizer_in_stereo = "no"
visualizer_fps = "60"
# visualizer_type = "wave"
visualizer_type = "ellipse" (spectrum/ellipse/wave)
visualizer_look = "∗▐"
visualizer_color = "199,200,201,202,166,130,94,58,22"
visualizer_spectrum_smooth_look = "yes"

# GENERAL
# ---
# lyrics_directory = "~/.config/ncmpcpp/lyrics"
connected_message_on_startup = "yes"
cyclic_scrolling = "yes"
mouse_support = "yes"
mouse_list_scroll_whole_page = "yes"
lines_scrolled = "1"
playlist_disable_highlight_delay = "5"
message_delay_time = "3"
playlist_shorten_total_times = "yes"
# playlist_display_mode = "columns"
# browser_display_mode = "columns"
# search_engine_display_mode = "columns"
playlist_display_mode = "classic" (classic/columns)
browser_display_mode = "classic" (classic/columns)
search_engine_display_mode = "classic" (classic/columns)

playlist_editor_display_mode = "columns"
autocenter_mode = "yes"
centered_cursor = "no"
# user_interface = "classic"
follow_now_playing_lyrics = "yes"
locked_screen_width_part = "50"
ask_for_locked_screen_width_part = "yes"
display_bitrate = "no"
external_editor = "nvim"
main_window_color = "green"
startup_screen = "playlist"

# PROGRESS BAR
# ---
progressbar_look = "━━━"
#progressbar_look = "▃▃▃"
progressbar_elapsed_color = "5"
progressbar_color = "black"

# UI VISIBILITY
# ---
header_visibility = "no"
statusbar_visibility = "yes"
titles_visibility = "yes"
enable_window_title = "yes"

# COLORS
# ---
statusbar_color = "cyan"
color1 = "white"
color2 = "blue"

colors_enabled = "yes"
empty_tag_color = "white"
header_window_color = "white"
volume_color = "yellow"
state_line_color = "white"
state_flags_color = "white"
# main_window_color = "green"


# UI APPEARANCE
# ---
now_playing_prefix = "$b$3  $2 "
now_playing_suffix = "  $/b$8"
current_item_prefix = "$b$3  ●$/b$2 "
current_item_suffix = "  $8"

song_columns_list_format = "(50)[]{t|fr:Title} (0)[yellow]{a}"
# song_columns_list_format = "(10)[black]{l} (30)[yellow]{a} (30)[green]{b} (30)[green]{t}"

# song_list_format = " {%t $R  ● $8%a$8}|{%f $R   $8%l$8} $8"
song_list_format = "$1%a   $4%t$R  %l"
song_library_format = "{%n - }{%t}|{%f}"
alternative_header_first_line_format = "{$b$1%t$9$/b}"
jump_to_now_playing_song_at_start = "yes"
regular_expressions = "basic" (basic/extended)
empty_tag_marker = "<Eeeempty>"
alternative_header_second_line_format ="$0{%a} $b$8-$9$/b {%b}$9"

song_status_format = "$b$6$7[$8      $7]$6 $2 $7{$8 %b }|{$8 %t }|{$8 %f }$7 $8"

song_window_title_format = "Now Playing .."





